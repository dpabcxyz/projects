{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "config/*": ["src/config/*"],
            "api/*": ["src/api/"],
            "stylus/*": ["src/stylus/*"],
            "components/*": ["src/components/*"],
            "utils/*": ["src/utils/*"],
            "img/*": ["src/assets/*"],
            "plugins/*": ["src/plugins/*"]
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src"]
}