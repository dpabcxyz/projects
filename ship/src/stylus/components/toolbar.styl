@import '../mixins.styl'
.toolbar
    height 60px
    width 100%
    color #FFFFFF
    background linear-gradient(0deg, rgba(0, 46, 103, 1), rgba(4, 51, 130, 1))
    flexBox(center,center)
    padding 0 40px
    position: relative
    z-index: 1010
    flex-shrink: 0
    .svg-icon_logo
        width 98px
        height 32px
        margin-right 13px
    .left
        position: absolute
        left: 40px
        height 60px
        top: 0
        cursor pointer
        .text
            font-size 16px
            font-weight 500
            color rgba(255, 255, 255, 1)
            flex 1
            textoverflow()
        .logo
            flexBox(center, center)
        img
            margin-right 13px
    .left, .right
        flexBox(, center)
    .right
        position: absolute
        right:40px
        height 60px
        top: 0
        flexBox(, center)
        .userArea
            flexBox(, center)
            border-left 1px solid #5774A2
            padding-left 14px
            textoverflow()
            .ivu-dropdown-item
                flexBox(center,center)
            .svg-icon_quit
                fill currentColor
                width 12px
                height 12px
                margin-right 10px
            .item
                color #043381
                flexBox(center,center)
            .userArea-box
                cursor pointer
                flexBox(center,center)
                span
                    color #fff
        img
            width 32px
            height 32px
            border-radius 100%
            margin-left 8px
    .center
        flex-grow 1
        flexBox(center)
        ul
            flexBox(, center)
            li
                padding 0 20px
                height 60px
                line-height 60px
                color #B2C0D3
                box-sizing border-box
                cursor pointer
                user-select none
                textoverflow()
                &.active
                    background rgba(8, 130, 255, 0.3)
                    color #fff
                    border-bottom 4px solid rgba(10, 122, 236, 1)
                &:last-child
                    margin-left 40px
