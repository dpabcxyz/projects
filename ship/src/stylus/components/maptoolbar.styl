@import '../mixins.styl'
.ls-map-toolbar
    .bar
        background linear-gradient(0deg, rgba(0, 46, 103, 0.9), rgba(4, 51, 130, 0.9))
        box-shadow 0px 0px 4px 0px rgba(10, 32, 79, 0.5)
        border-radius 2px
        height 26px
        padding 10px 0px
        box-sizing content-box
        flexBox(flex-start, center)
        position absolute
        right 10px
        top 10px
        z-index 1001
        flex-wrap nowrap
        color #B2C0D3
    svg
        fill currentColor
        width 15px
        height 15px
        margin-right 10px
    .bar-item
        flexBox(flex-start, center)
        padding 0 12px
        border-left 1px dashed #5774A2
        cursor pointer
        &:first-child
            border none
        &.active, &:hover
            color #fff
        &.heartBeat
            svg
                fill: red
                animation: flash 1.7s ease infinite
                
    .content
        position absolute
        right 10px
        top 66px
        z-index 1010
        flex-wrap nowrap
        
        
@keyframes heartBeat
    0%
        transform scale(1)
    14%
        transform scale(1.3)
    28%
        transform scale(1)
    42%
        transform scale(1.3)
    70%
        transform scale(1)

@keyframes flash {
  from,
  50%,
  to {
    opacity: 1;
  }

  25%,
  75% {
    opacity: 0;
  }
}