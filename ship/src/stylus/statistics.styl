ul, li
    padding 0
    list-style none
    margin 0
.admin_statis-autoflex
    flexBox()
    flex-direction column
    &-grow
        flex-grow 1
.admin-autoflex
    flexBox()
    flex-direction column
    &-grow
        flex-grow 1
.admin_statistics-title
    font-size 22px
    font-weight 400
    padding-top 20px
.admin_statis_info
    height 100%
    width 100%
    box-sizing border-box
    padding 0 20px 20px
    font-size 16px
    flexBox()
    flex-direction column
    &-table
        flex-grow 1
    &-data
        padding 0 10px
        &:hover
            .info-title:after
                background #2b85e4
        .info-title
            font-weight 400
            position relative
            &:after
                content ''
                position absolute
                height 100%
                width 5px
                left -15px
                top 0
                background #5cadff
                transition all 0.2s
        .info-area
            padding 15px 0
            i
                font-style normal
                color: #2db7f5
                cursor: pointer

            span.pr10
                padding-right 10px
            button
                margin-left 10px
            .split-icon
                padding 0 10px
                display inline-block
            ul
                flexBox()
                li
                    padding-right 15px
                    flex-grow 1
                    span
                        padding-right 5px
.admin_statistics
    height 100%
    box-sizing border-box
    font-size 16px
    .admin_menu
        height 100%
    .stats_area
        &_search
            flexBox()
            &-item
                padding-right 10px
                .split-icon
                    padding 0 10px
                    display inline-block
            span.pr10
                padding-right 10px
        &_export, &_page
            text-align right
            padding-top 15px
        &_table
            padding-top 15px