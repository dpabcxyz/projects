.slider-map-bar
    height 70px
    padding 10px
    // background rgba(255, 255, 255, 0.4)
    background rgba(255,255,255,.6)
    // box-shadow 0px 0px 4px 0px rgba(10, 32, 79, 0.5)
    border-radius 3px
    overflow hidden
    box-sizing content-box
    margin-right: -10px
    // margin-bottom 10px
    ul
        display flex
        flex-wrap nowrap
        position relative
        li
            position relative
            font-size 0
            margin-right 10px
            cursor pointer
            transition all 0.1s ease
            border-radius 3px
            overflow hidden
            transition all 0.2s
            &:hover
                transform translatey(-3px)
                img
                    border: 1px solid #043381
            &.current img
                border 1px solid #043381
            &:last-child
                margin-right 0
        img
            width 100px
            height 70px
            border 1px solid rgba(255, 255, 255, 0.3)
        span
            position absolute
            font-size 12px
            right 0
            bottom 0
            line-height 1.4
            color #fff
            background #043381
            padding 2px 4px
            right 1px
            bottom 1px
    &.min
        width 120px
        background none
        li
            margin 0
            position absolute
            &.current img
                border:1px solid rgba(4,51,129,1);
            &:nth-of-type(1)
                right 20px
                opacity 0.5
                z-index 1
            &:nth-of-type(2)
                right 10px
                opacity 0.5
                z-index 2
            &:nth-of-type(3)
                right 0
                z-index 3
