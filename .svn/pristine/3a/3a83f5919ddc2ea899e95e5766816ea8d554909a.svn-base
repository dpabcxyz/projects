@import '../mixins.styl'
.ship
    background rgba(237, 241, 246, 1)
    box-sizing border-box
    .shipinfo
        flexBox(flex-start, centers)
        .shipimgs
            width 232px
            margin-right 50px
            flex-shrink 0
            .shipimg
                img
                    padding 10px
                    border 1px solid rgba(204, 212, 219, 1)
                    border-radius 4px
                    overflow hidden
        .shiplist
            font-size 14px
            font-weight 400
            color rgba(102, 102, 102, 1)
            flexBox()
            flex auto
            flex-direction column
            ul
                flexBox()
                flex-wrap wrap
                li
                    padding-top 19px
                    flex 0 0 330px
                    flexBox()
                    &.wrap
                        display block
                        clear both
                        height 0
                        overflow hidden
                        padding 0
                        width 100%
                        flex-basis 100%
            .title
                font-size 16px
                font-weight 500
                color rgba(51, 51, 51, 1)
                line-height 21px
                flexBox(flex-start, center)
                svg
                    width 12px
                    height 12px
    .shipinfo_copy
        background rgba(0, 46, 103, 0.5)
    &-area
        margin 30px
        background rgba(255, 255, 255, 1)
        border 1px solid rgba(204, 212, 219, 1)
        border-radius 4px
        &_shipname
            height 51px
            line-height 51px
            box-sizing border-box
            border-bottom 1px solid rgba(204, 212, 219, 1)
            font-size 16px
            font-weight 500
            color rgba(51, 51, 51, 1)
            padding-left 21px
            span
                padding-right 13px
        .shipinfo
            padding 25px 27px
            border-bottom 1px solid rgba(204, 212, 219, 1)
            &:last-child
                border none
    .car-close
        position fixed
        top 20px
        right 20px
        width 20px
        height 20px
        z-index 1011
        cursor pointer
    .carousel
        position fixed
        left 0
        top 0
        width 100%
        height 100%
        z-index 1010
        background #fff
        .ivu-carousel-list, .ivu-carousel-track.higher, .ivu-carousel-item
            height 100%
        .ivu-carousel-track.higher
            flexBox(center, center)
        .ivu-carousel-item
            flexBox(center, center)
        .carousel-item
            height 100%
