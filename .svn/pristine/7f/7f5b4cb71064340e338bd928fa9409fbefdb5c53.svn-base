@import '../mixins.styl'
.ship_manage
    flexBox()
    flex-direction column
    flex-grow 1
    background rgba(237, 241, 246, 1)
    box-sizing border-box
    .shipinfo_copy
        background rgba(0, 46, 103, 0.5)
    &_area
        margin 30px
        padding 18px
        background rgba(255, 255, 255, 1)
        border 1px solid rgba(204, 212, 219, 1)
        border-radius 4px
        flex-grow 1
    &_searchbar
        flexBox(space-between, center)
        .svg-icon_export
            width 12px
            height 12px
            margin-right 8px
    &_table
        margin-top 10px
        .admin-grow_page
            flexBox(space-between, center)
            padding-top 10px
            text-align right
            .pagecontrol
                flexBox(center, center)
                span
                    padding-left 20px
            .total i
                font-style normal
                color #0A7AEC
                font-size 14px
                padding 4px
.createGroup
    flexBox()
    flex-direction column
    label
        display block
        padding-bottom 10px
        padding-top 10px
.createButton
    border-top 1px solid rgba(204, 212, 219, 1)
    line-height 33px
    color #0A7AEC
    border none
